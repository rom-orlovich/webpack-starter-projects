{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      // ... your other types
      "node"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build/**/*", "src/tests"]
}
